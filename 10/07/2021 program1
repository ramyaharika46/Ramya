import java.util.*;
public class Main
{
	public static void main(String[] args)
	{
		int i,n;
		String Str;
		System.out.println("Enter a String");
		Scanner Sc=new Scanner(System.in);
		Str=Sc.next();
		n=Str.length();
		for(i=n-1;i>=0;i--)
		{
		    System.out.print(Str.charAt(i));
		}
	}
}
out put:
Enter a String
helloworld
dlrowolleh
